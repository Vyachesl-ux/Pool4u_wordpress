{
	"$schema": "https://schemas.wp.org/trunk/block.json",
	"apiVersion": 2,
	"textdomain": "pool4u",
	"editorScript": "file:./index.js",
	"editorStyle": "file:./index.css",
	"version": "0.1.0",

	"name": "pool4u/intro",
	"title": "Интро блок",
	"category": "design",
	"description": "Отображает фон, и интро текст компании. Используется как первый блок на странице",
	"keywords": ["интро", "intro","фото и текст", "фото", "текст", "text", "image"],

	"supports": {
		"align": [
			"full"
		]
	},
	"attributes": {
		"align": {
			"type": "string",
			"default": "wide"
		},
		"heading": {
			"type": "string"
		},

		"preamble": {
			"type": "string"
		},
		"imgURL": {
			"type": "string"
		},
		"imgID": {
			"type": "number"
		},
		"imgAlt": {
			"type": "string"
		},
		"imgPlacement": {
			"type": "string",
			"default": "left"
		},
		"imgPosition": {
			"type": "object",
			"default": {
				"x": 0.5,
				"y": 0.5
			}
		},
		"btnText": {
			"type": "string"
		},
		"btnLink1": {
			"type": "object"
		},
		"btnLink2": {
			"type": "object"
		}

	}
}
