{
	"$schema": "https://schemas.wp.org/trunk/block.json",
	"apiVersion": 2,
	"textdomain": "pool4u",
	"editorScript": "file:./index.js",
	"editorStyle": "file:./index.css",
	"version": "0.1.0",

	"name": "pool4u/image-text",
	"title": "Image & Text",
	"category": "design",
	"description": "Display text alongside an image.",
	"keywords": ["фото и текст", "фото", "текст", "text", "image"],

	"supports": {
		"align": [
			"wide",
			"full"
		]
	},
	"attributes": {
		"align": {
			"type": "string",
			"default": "wide"
		},
		"heading": {
			"type": "string"
		},
		"subheading": {
			"type": "string"
		},
		"preamble": {
			"type": "string"
		},
		"imgURL": {
			"type": "string"
		},
		"imgID": {
			"type": "number"
		},
		"imgAlt": {
			"type": "string"
		},
		"imgPlacement": {
			"type": "string",
			"default": "left"
		},
		"imgPosition": {
			"type": "object",
			"default": {
				"x": 0.5,
				"y": 0.5
			}
		},
		"btnText": {
			"type": "string"
		},
		"btnLink1": {
			"type": "object"
		},
		"btnLink2": {
			"type": "object"
		},
		"columnLayout": {
			"type": "string",
			"default": "5050"
		},
		"useInnerBlocks": {
			"type": "boolean",
			"default": false
		},
		"removeMargins": {
			"type": "boolean",
			"default": true
		}
	}
}
